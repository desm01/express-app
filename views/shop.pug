extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content 

    main
        if prods.length > 0
            .grid 
                each product in prods 
                    article.card.product-item 
                        header.card__header 
                            h1.product__title  #{product.title}

                        .card__image 
                                img(src="https://thumbs-prod.si-cdn.com/MXRigU6qbW9_2nLwBvXywDRQJ24=/1072x720/filters:no_upscale()/https://public-media.si-cdn.com/filer/91/91/91910c23-cae4-46f8-b7c9-e2b22b8c1710/lostbook.jpg", alt="Image")

                        .card__content 
                            h2.product__price $19.99
                            p.product__description A very intresting book 

                        .card__actions 
                            button.btn Add To Cart
        else
            h1 Sorry, no items in stock
